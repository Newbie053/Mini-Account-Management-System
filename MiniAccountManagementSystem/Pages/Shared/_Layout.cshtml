<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MiniAccountManagementSystem</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniAccountManagementSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .nav-link.active, .nav-link:hover {
            color: #0d6efd !important;
            font-weight: 600;
            text-decoration: underline;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-page="/Index">Mini Account Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/Admin/ManageRoles">Manage Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/Admin/ManageUsers">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/ChartOfAccounts/Index">Chart of Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/Vouchers/Create">Vouchers</a>
                            </li>
                        }
                        else if (User.IsInRole("Accountant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/ChartOfAccounts/Index">Chart of Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/Vouchers/Create">Vouchers</a>
                            </li>
                        }
                        else if (User.IsInRole("Viewer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-page="/ChartOfAccounts/Index">Chart of Accounts</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main body with growable container -->
    <div class="container flex-grow-1 mb-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer moves based on content height -->
    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - MiniAccountManagementSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
